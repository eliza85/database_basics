
<h1>Update <%= @artist.name() %></h1>

<form action="/artists/<%= @artist.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename artist</label>
  <input id="name" name="name" type="text">
  <label for="year">album year</label>
  <input id="year" name="year" type="text">

  <label for="genre">album genre</label>
  <input id="genre" name="genre" type="text">


  <button type="submit">Update</button>
</form>

<form action="/artists/<%= @artist.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete artist</button>
</form>

<p><a href="/artists">Return to artist list</a></p>
